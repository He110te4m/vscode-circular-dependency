{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": false,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "types": [
      "vitest",
      "vite/client"
    ],
    "paths": {
      "fp-ts/*": [ "node_modules/fp-ts/es6/*" ],
      "@he110/utils/*": ["src/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverages"
  ]
}
